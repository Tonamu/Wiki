views:
  - type: table
    name: Table
    filters:
      and:
        - file.ext != "base"
    order:
      - id
      - file.name
      - relevant_tag_id
      - validation_strategy
      - be_validations
      - date_checked
      - rule_context
      - entry_type
      - occurance
      - edit_list
      - entry_status
      - date_created
      - date_modified
      - detection_script
      - fe_validations
      - name
      - rationale
      - status
    sort:
      - property: relevant_tag_id
        direction: DESC
      - property: file.name
        direction: ASC
      - property: id
        direction: ASC
      - property: entry_type
        direction: DESC
      - property: validation_strategy
        direction: DESC
      - property: validation strategy
        direction: DESC
      - property: edit_list
        direction: DESC
      - property: entry_status
        direction: ASC
    columnSize:
      file.name: 250
      note.validation_strategy: 68
      note.be_validations: 70
      note.date_checked: 109
      note.rule_context: 137
      note.entry_type: 231
      note.edit_list: 90
      note.entry_status: 95
